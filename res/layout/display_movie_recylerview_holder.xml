<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/list_item_movie">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/image_view_display_movie_view_holder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" app:layout_constraintVertical_bias="0.55"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/movie_title_movie_view_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_display_movie_view_holder"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/realse_date_movie_view_holder"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="#000000" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/realse_date_movie_view_holder" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/image_view_display_movie_view_holder"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/movie_title_movie_view_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/language_movie_view_holder"
            android:textStyle="bold" android:textColor="#000000"/>
    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/language_movie_view_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_display_movie_view_holder"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.062"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/realse_date_movie_view_holder"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            android:textColor="#000000"/>
</android.support.constraint.ConstraintLayout>