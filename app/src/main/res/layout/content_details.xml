<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
            android:layout_width="401dp"
            android:layout_height="185dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout"
            android:background="#FFFFFF"
            android:layout_marginTop="8dp">

        <ImageView
                android:layout_width="132dp"
                android:layout_height="173dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/content_detail_poster_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.49"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/content_detail_popularity"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/content_detail_poster_view"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="175dp"
                android:layout_marginRight="175dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/content_detail_relase_date"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/content_detail_relase_date"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/content_detail_popularity"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/content_detail_poster_view"
                android:layout_marginBottom="85dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="175dp"
                android:layout_marginRight="175dp"
                android:textColor="#000000"
                app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/view_pager">
        <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tabLayout">

            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="summary" android:id="@+id/summary"/>
            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews" android:id="@+id/reviews"/>
            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video" android:id="@+id/video"/>
        </android.support.design.widget.TabLayout>

    </android.support.v4.view.ViewPager>


</android.support.constraint.ConstraintLayout>