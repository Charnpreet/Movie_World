<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="185dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/top_rated_movies_image_view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/top_rated_movies_textView"
            app:layout_constraintVertical_bias="1.0" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="text_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/top_rated_movies_textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_rated_movies_image_view" android:layout_marginBottom="8dp"
            android:layout_marginTop="2dp" android:textStyle="bold" android:textColor="#00000F"
            android:textSize="16sp" android:fontFamily="sans-serif-condensed-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4" android:gravity="center"/>
</android.support.constraint.ConstraintLayout>